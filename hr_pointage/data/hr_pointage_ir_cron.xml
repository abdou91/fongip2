<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_cron_send_mail_working_week" model="ir.cron">
        <field name="name">send_mail_working_week_statistique</field>
        <field name="active">false</field>
        <field name="interval_number">1</field>
        <field name="interval_type">weeks</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="(DateTime.now().replace(hour=18, minute=0) - timedelta(days=DateTime.now().weekday(), weeks=1) + timedelta(days=4)).strftime('%Y-%m-%d %H:%M:%S')" />
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_hr_employee"/>
        <field name="code">model.scheduler_send_mail_working_week_statistique()</field>
        <field name="state">code</field>
    </record>
