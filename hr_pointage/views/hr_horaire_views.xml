<odoo>
    <data>
    
    <!-- Horaire -->
    <record id="action_liste_horaire" model="ir.actions.act_window">
        <field name="name">Horaire</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.horaire</field>
        <field name="search_view_id" eval="False"/>
        <field name="view_id" eval="False"/>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
          </p>
        </field>
    </record>
    <!-- Horaire form -->
    <record id="view_liste_horaire_form" model="ir.ui.view">
        <field name="name">hr.horaire.form</field>
        <field name="model">hr.horaire</field>
        <field name="arch" type="xml">
            <form string="Horaire">
                <header>
                    <button 
                        string="Activer Horaire"
                        name="action_active" 
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible': [('active_horaire', '=', True)]}"
                    />
                    <button 
                        string="Desactiver Horaire"
                        name="action_inactive" 
                        type="object"
                        class="btn-danger"
                        attrs="{'invisible': [('active_horaire', '=', False)]}"
                    />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" attrs="{'readonly': [('active_horaire', '=', False)]}"/>
                            <field name="flexible" attrs="{'readonly': [('active_horaire', '=', False)]}"/>
                            <field 
                                name="user_id"
                                attrs="{'invisible': [('active_horaire', '=', True)],'readonly': [('active_horaire', '=', False)]}"
                                readonly="1"
                            />
                            <field 
                                name="inactive_date"
                                attrs="{'invisible': [('active_horaire', '=', True)],'readonly': [('active_horaire', '=', False)]}"
                                readonly="1"
                            />
                        </group>
                        <group>
                            <field name="active_horaire" readonly="1" widget="toggle_button"/>
                            <field name="entry_time" widget="float_time" attrs="{'readonly': [('active_horaire', '=', False)]}"/>
                            <field 
                                name="flexible_entry_time" 
                                widget="float_time"
                                attrs="{'invisible': [('flexible', '=', False)],'readonly': [('active_horaire', '=', False)]}"
                            />
                            <field 
                                name="flexible_exit_time" 
                                widget="float_time"
                                attrs="{'invisible': [('flexible', '=', False)],'readonly': [('active_horaire', '=', False)]}"
                            />
                            <field 
                                name="exit_time" 
                                widget="float_time" 
                                attrs="{'readonly': [('active_horaire', '=', False)]}"
                            />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Horaire Tree -->
    <record id="view_liste_horaire_tree" model="ir.ui.view">
        <field name="name">hr.horaire.form</field>
        <field name="model">hr.horaire</field>
        <field name="arch" type="xml">
            <tree string="horaires">
                <field name="name"/>
                <field name="entry_time" widget="float_time"/>
                <field name="flexible_entry_time" widget="float_time"/>
                <field name="exit_time" widget="float_time"/>
                <field name="flexible_exit_time" widget="float_time"/>
                <field name="active_horaire" widget="toggle_button"/>
            </tree>
        </field>
    </record>

    <menuitem
        name="Horaires"
        id="menu_hr_pointage_horaires"
        action='action_liste_horaire'
        parent='hr.menu_human_resources_configuration'
        sequence='79'
        groups="hr.group_hr_manager"
        />
    </data>
</odoo>